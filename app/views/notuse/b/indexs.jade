      |         
      #page-wrapper 
        .row
          | Issue {{ currentIssue.issue_no }}
        .row
          .col-lg-12
            h4 Live Date : {{ currentIssue.live_date }}
            img(ng-src='{{ currentIssue.issue_cover_image_path.en }}' class='issueCover')
            form#upload-asset(action='/images/fixImages', method='POST',enctype="multipart/form-data")
              .form-group
                input(type='hidden', value='{{ currentIssue.issue_cover_image_path.en }}', name='imageLocation')
                input(class="btn btn-default btn-sm" type='file', name='pic', accept='image/jpg')
                button(class="btn btn-default btn-sm" type="submit") Update Cover
        .row
        #tool-main-container.row
          .col-lg-3(ng-repeat='feature in allFeatures')
            .feature_name.text-center {{feature.meta_data.feature_name.en}}
            a(ng-href='/tool/magazine/features/{{feature._id}}')
              img.feature_thumbnail.center-block(ng-src='{{ feature.thumbnail.en }}') 
            form(action='/images/fixImages', method='POST',enctype="multipart/form-data")
                .form-group
                    input(type='hidden', value='{{ feature.thumbnail.en }}', name='imageLocation')
                    input(class="btn btn-default btn-sm" type='file', name='pic', accept='image/jpg')
                    button(class="btn btn-default btn-sm center-block" type="submit") Update Thumbnail
